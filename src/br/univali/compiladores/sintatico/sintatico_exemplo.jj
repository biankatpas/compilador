	<CONSTANTE_NUM_INTEIRA> |
	<CONSTANTE_NUM_REAL> |
	<CONSTANTE_LITERAL> |
	<TRUE> |
	<UNTRUE> |
	<OPENPARENTHESIS> expression(g) <CLOSEPARENTHESIS> |
	<EXCLAMATION> <OPENPARENTHESIS> expression(g) <CLOSEPARENTHESIS>
}

