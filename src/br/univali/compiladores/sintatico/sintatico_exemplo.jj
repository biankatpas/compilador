void constants() : {}
{
    <CONSTANTE_NUM_REAL> | <CONSTANTE_NUM_INTEIRA> | <CONSTANTE_LITERAL>
}

void lst_var() : {}
{
	<IDENTIFICADOR> index() (mult_identifier() index())*
}

void type() : {}
